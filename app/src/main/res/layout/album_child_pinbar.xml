<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:padding="4dp"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="收藏"
                android:drawableLeft="@mipmap/ic_album_collect"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                />
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="#ccc"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="批量下载"
                android:drawableLeft="@mipmap/ic_album_download_normal"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                />
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="#ccc"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="相关推荐"
                android:drawableLeft="@mipmap/ic_album_related_normal"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:padding="8dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="共19集"
                />
        <TextView
                android:id="@+id/album_detail_btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_album_sort_asc"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="排序"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pager_selector"
                android:layout_toLeftOf="@id/album_detail_btn_select"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:text="选集"
                />

    </RelativeLayout>

</LinearLayout>
