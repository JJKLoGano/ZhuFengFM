<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#fff"
                android:padding="14dp">
    <TextView
            android:id="@+id/discover_recommend_album_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类标题"
            android:drawableLeft="@mipmap/finding_title_tag"
            />
    <TextView
            android:id="@+id/discover_recommend_album_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:drawableRight="@mipmap/arrow_right"
            android:text="更多"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/discover_recommend_album_item_title"
            >
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:layout_height="match_parent"
                    >
                <ImageView
                        android:id="@+id/discover_recommend_album_item_icon_0"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:background="@mipmap/album_cover_bg"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_name_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/discover_recommend_album_item_icon_0"
                        android:text="专辑名称"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:background="#c666"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_track_name_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discover_recommend_album_item_icon_0"
                        android:text="专辑描述"
                        android:textSize="14dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#000"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:layout_height="match_parent"
                    >
                <ImageView
                        android:id="@+id/discover_recommend_album_item_icon_1"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:background="@mipmap/album_cover_bg"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_name_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/discover_recommend_album_item_icon_1"
                        android:text="专辑名称"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:background="#c666"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_track_name_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discover_recommend_album_item_icon_1"
                        android:text="专辑描述"
                        android:textSize="14dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#000"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    >
                <ImageView
                        android:id="@+id/discover_recommend_album_item_icon_2"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:background="@mipmap/album_cover_bg"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/discover_recommend_album_item_icon_2"
                        android:text="专辑名称"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#fff"
                        android:background="#c666"
                        />
                <TextView
                        android:id="@+id/discover_recommend_album_item_track_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discover_recommend_album_item_icon_2"
                        android:text="专辑描述"
                        android:textSize="14dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#000"
                        />
            </RelativeLayout>

    </LinearLayout>
</RelativeLayout>