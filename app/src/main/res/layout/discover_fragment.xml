<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.jjklogano.zufengfm.fragments.DiscoverFragment"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/title_logo"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/search_unpress"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>
    <!-- 使用android5.0新增design包进行兼容-->

    <android.support.design.widget.TabLayout
            android:id="@+id/discover_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#fc5832"
            app:tabSelectedTextColor="#fc5832"
            app:tabIndicatorHeight="3dp"
            >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/discover_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

</LinearLayout>
